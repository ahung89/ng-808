<!DOCTYPE html>
<html ng-app="sm808">
  <head>
    <title><%= pkg.name %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
    <script type="text/javascript" src="<%= js %>"></script>
  </head>
  <body ng-controller="MainController">
    <div class="container">
      <h1>SM-808</h1>

      <table class="table" cellspacing="0">
        <tr>
          <th>Name</th>
          <th>*</th>
          <th ng-repeat="i in drumMachine.stepsRange">{{ i + 1 }}</th>
        </tr>
        <tr ng-repeat="part in drumMachine.parts">
          <td>{{ part.name }}</td>
          <td >{{ part.currentEvent.level }}</td>
          <td ng-repeat="event in part.sequence.events"><span ng-click="toggleLevel(event)">{{ event.level }}</span></td>
        </tr>
      </table>
    </div>
  </body>
</html>
